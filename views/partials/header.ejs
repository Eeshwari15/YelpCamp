<html>
<head>

<title>TripAdvisor</title>
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<link rel="stylesheet" href="/stylesheets/main.css">




</head>

<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="color:white">
  <a class="navbar-brand" href="/"><strong>TripAdvisor</strong></a>
 
  <div class="collapse navbar-collapse" id="navbarSupportedContent" style="margin-left-500px">
    <ul class="nav navbar-nav navbar-right" style="margin-left:1000px" >
      <li class="nav-item active" >
      
     <% if(!currentUser){ %>
        <a class="nav-link" href="/login"><strong>Login</strong><span class="sr-only"></span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/register"><strong>Sign Up</strong><span class="sr-only"></span></a>
      </li>
      <% }else{ %>
      
    <li class="nav-item" style="margin-left:100px">
    <a class="nav-link" href="/logout"><strong> <%= currentUser.username %></strong><span class="sr-only"></span></a>
  
        
      </li>
      <li class="nav-item">
          <a class="nav-link" href="/logout"><strong>LogOut</strong><span class="sr-only"></span></a>
      
  
      </li>

  <% } %>
     
    </ul>
    
  </div>
</nav>

<div class="container" style="margin-top:10px">
<%  if(error&& error.length>0){  %>
<div class="alert alert-danger" role="alert">
<%= error %>
</div>
<% } %>
<% if(success && success.length>0){ %>
  <div class="alert alert-success" role="alert">
  <%= success %>
  </div>
  <% } %>
</div>