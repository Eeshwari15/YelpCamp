<% include partials/header %>
<div class="container" style="margin-top:25px">
  <div class="row">
     <div class="col-md-3"> 
        <p class="lead">YelpCamp</p>
        <div class="list-group">
        <li class="list-group-item active">Info-1</li>
        <li class="list-group-item">Info-2</li>
        <li class="list-group-item">Info-3</li>
        
        
         </div>
</div>
<div class="col-md-9">
<div class="img-thumbnail">

<img class="img-thumbnail" src="<%= campground.image %>" style="width:100%" >
<div class="caption-full">

<h2 style="padding:10px"><a href=""><%= campground.name %></a></h2>
<p><%= campground.description %></p>
<p><em>Submitted By: <%= campground.author.username %></em></p>
<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
<a class="btn btn-warning" href="/campgrounds/<%= campground._id %>/edit">Edit</a>


<form style="display:inline" action="/campgrounds/<%= campground._id %>?_method=DELETE"  method="POST">
<button class="btn btn-danger">Delete</button>
</form>

<%  } %>
</div>
<br>
<div class="well" style="background:#D3D3D3">
<div class="text-right">

<a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add new comment</a>



</div>
<% campground.comments.forEach(function(comment){ %>
<div class="row">
<div class="col-md-12">

<strong><%= comment.author.username %></strong>
<span class="pull-right" style="margin-left:650px">10 days ago</span>
<p><%= comment.text %></p>


<% if(currentUser && (comment.author.id.equals(currentUser._id))){ %>

<a class="btn btn-xs btn-warning" 
href="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>/edit">Edit</a>
<form  style="display:inline" action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
    <button class="btn btn-danger">Delete</button>
    </form>

<% } %>




</div>
</div>
<% }) %>

</div>

</div>



</div>
</div>
</div>
</div>










<% include partials/footer %>
