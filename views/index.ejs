<% include partials/header %>
<div class="container">

<div class="jumbotron jumbotron-fluid">

    <h1 class="display-4" style="margin-left:10px"><strong>Welcome to TripAdvisor!</strong></h1>
    <hr class="my-4">
    <p  style="margin-left:15px">View our hand-picked sites from all around!</p>
    <p><a href="/campgrounds/new" class="btn btn-primary btn-large" style="margin-left:15px">Add new Site</a></p>
</div>
<div class="row">
<div class="col-lg-12">
<h3 style="margin-left:15px">Our Most Popular Sites!</h3>
</div>
</div>
<div class="row text-center" style="display:flex; flex:wrap:wrap;" style="margin-bottom:50px">

<% campgrounds.forEach(function(camps){ %>
<div class="col-md-3 col-sm-6">
<img src="<%= camps.image %>" class="img-thumbnail" style="height:250px; width:350px">

<p><a href="/campgrounds/<%= camps._id %>" class="btn btn-info" style="margin-top:10px"><%= camps.name %></a></p>


</div>


<% });%>
</div>

</div>
<% include partials/footer %>




